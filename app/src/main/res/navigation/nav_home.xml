<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.david.hackro.covid.presentation.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_countryDetailsFragment"
            app:destination="@id/countryDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/countryDetailsFragment"
        android:name="com.david.hackro.covid.presentation.fragment.CountryDetailsFragment"
        android:label="fragment_country_details"
        tools:layout="@layout/fragment_country_details">

        <argument
            android:name="countryIso"
            android:defaultValue="MX"
            app:argType="string" />

    </fragment>

</navigation>

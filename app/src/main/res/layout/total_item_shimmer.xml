<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4"
    android:elevation="@dimen/dimen_20"
    android:background="@color/background_shimmer"
    app:cardCornerRadius="@dimen/dimen_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_shimmer">

        <View
            android:id="@+id/totalCasesShimmer"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/default_size"
            android:layout_marginStart="@dimen/small_size"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rateNumberShimmer"
            android:background="@android:color/white"
            />

        <View
            android:id="@+id/descriptionShimmer"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/default_size"
            android:layout_marginStart="@dimen/small_size"
            android:layout_marginTop="@dimen/small_size"
            android:layout_marginEnd="@dimen/small_size"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalCasesShimmer" />

        <View
            android:id="@+id/colorBarShimmer"
            android:layout_width="@dimen/empty_size"
            android:layout_height="@dimen/micro_size"
            android:layout_marginStart="@dimen/small_size"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/small_size"
            android:layout_marginBottom="@dimen/default_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/descriptionShimmer" />

        <View
            android:id="@+id/rateShimmer"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/default_size"
            android:layout_marginStart="@dimen/small_size"
            android:layout_marginTop="@dimen/small_size"
            android:layout_marginBottom="@dimen/small_size"
            android:padding="@dimen/dimen_6"
            app:layout_constraintBottom_toTopOf="@+id/totalCasesShimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/white"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/rateNumberShimmer"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/default_size"
            android:layout_marginEnd="@dimen/small_size"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/rateShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rateShimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
